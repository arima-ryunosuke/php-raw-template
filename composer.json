{
  "config": {
    "platform": {
      "php": "7.2"
    }
  },
  "name": "ryunosuke/night-dragon",
  "type": "library",
  "description": "Simple native template engine",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "ryunosuke/functions": "1.4.3",
    "phpunit/phpunit": "7.*",
    "twig/twig": "2.*",
    "jenssegers/blade": "1.*",
    "smarty/smarty": "3.*",
    "league/plates": "3.*"
  },
  "autoload": {
    "psr-4": {
      "ryunosuke\\NightDragon\\": "src/NightDragon"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\": "tests/Test"
    },
    "files": [
      "tests/functions.php"
    ]
  },
  "scripts": {
    "benchmark": [
      "@php benchmark/run.php"
    ],
    "build": [
      "@export",
      "@test",
      "@demo"
    ],
    "export": [
      "@php bin/export.php"
    ],
    "test": [
      "php -d short_open_tag=0 vendor/phpunit/phpunit/phpunit --configuration=tests/phpunit.xml",
      "php -d short_open_tag=1 vendor/phpunit/phpunit/phpunit --configuration=tests/phpunit.xml"
    ],
    "demo": [
      "@php demo/run.php"
    ],
    "post-install-cmd": [
      "@export"
    ],
    "post-update-cmd": [
      "@export"
    ]
  }
}
